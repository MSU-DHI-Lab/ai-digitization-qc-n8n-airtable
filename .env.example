# Copy this file to .env before running docker compose.
# This file uses simple defaults that work for local evaluation.

# Container images (pin to known-good versions; avoid "latest")
MODEL_SERVICE_IMAGE=watrall/ai-digitization-qc-model:v0.1.0
N8N_IMAGE=n8nio/n8n:1.61.4

# Airtable settings (replace these before production use)
AIRTABLE_PAT=patREPLACE_WITH_YOUR_PERSONAL_ACCESS_TOKEN
AIRTABLE_BASE_ID=appREPLACE_WITH_YOUR_BASE_ID
AIRTABLE_TABLE_NAME=Digitized Objects

# Model service API security and limits
MODEL_API_TOKEN=replace-with-a-long-random-token
ALLOW_NO_TOKEN=false
MAX_UPLOAD_MB=10
MAX_PIXELS=35000000

# n8n settings
# N8N_BASIC_AUTH_ACTIVE=true
# N8N_BASIC_AUTH_USER=admin
# N8N_BASIC_AUTH_PASSWORD=replace-with-a-password
USE_SHELL_MOVES=false
ALERT_WEBHOOK_URL=

# Paths used by n8n inside the container
DATA_INCOMING_PATH=/data/incoming
DATA_PROCESSED_PATH=/data/processed
DATA_FAILED_PATH=/data/failed
